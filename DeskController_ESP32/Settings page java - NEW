function addNewPresetRow() {
    const container = document.getElementById('preset-list');
    const row = document.createElement('div');
    row.className = 'preset-edit-row';
    row.innerHTML = `
        <input type="text" placeholder="Name (e.g. Work)" class="preset-name">
        <input type="number" placeholder="mm" class="preset-val">
        <button class="btn-delete" onclick="this.parentElement.remove()">Ã—</button>
    `;
    container.appendChild(row);
}